{
    "name": "dtomaker",
    "displayName": "dtomaker",
    "description": "",
    "version": "0.0.3",
    "publisher": "julie",
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.dtomaker.all",
        "onCommand:extension.dtomaker.one",
        "onCommand:extension.dtomaker.sqliteone"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Julie-ver5/dtomaker.git"
    },
    "main": "./out/extension.js",
    "icon": "images/icon.png",
    "contributes": {
        "commands": [
            {
                "command": "extension.dtomaker.all",
                "title": "%extension.dtomaker.all.title%",
                "category": "DTO Maker"
            },
            {
                "command": "extension.dtomaker.one",
                "title": "%extension.dtomaker.one.title%",
                "category": "DTO Maker"
            },
            {
                "command": "extension.dtomaker.sqliteone",
                "title": "%extension.dtomaker.sqliteone.title%",
                "category": "DTO Maker"
            }
        ],
        "configuration": [
            {
                "title": "DTOMaker configuration",
                "properties": {
                    "DTOMaker.configs": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "title": "DTOの設定",
                            "properties": {
                                "database": {
                                    "type": "object",
                                    "title": "DataBase設定",
                                    "properties": {
                                        "host": {
                                            "type": "string",
                                            "default": "localhost",
                                            "description": "データベースのホスト"
                                        },
                                        "port": {
                                            "type": "integer",
                                            "default": 3306,
                                            "description": "データベースのポート"
                                        },
                                        "user": {
                                            "type": "string",
                                            "default": "root",
                                            "description": "データベースのユーザー名"
                                        },
                                        "password": {
                                            "type": "string",
                                            "default": "",
                                            "description": "データベースのパスワード"
                                        },
                                        "database": {
                                            "type": "string",
                                            "default": "",
                                            "description": "データベース名"
                                        }
                                    }
                                },
                                "io": {
                                    "type": "object",
                                    "title": "生成ファイル設定",
                                    "properties": {
                                        "folderName": {
                                            "type": "string",
                                            "default": "Folder Name",
                                            "description": "プロジェクトフォルダ名"
                                        },
                                        "outputPath": {
                                            "type": "string",
                                            "default": "${workspaceRoot}\\output",
                                            "description": "出力先のパス"
                                        },
                                        "outputReset": {
                                            "type": "boolean",
                                            "default": true,
                                            "description": "DTO生成前に出力先フォルダの中身をすべて削除する"
                                        },
                                        "templatePath": {
                                            "type": "string",
                                            "default": "${workspaceRoot}\\template.txt",
                                            "description": "テンプレートファイルのパス"
                                        }
                                    }
                                },
                                "format": {
                                    "type": "object",
                                    "title": "フォーマット設定",
                                    "properties": {
                                        "className": {
                                            "type": "string",
                                            "default": "${className}DTO",
                                            "description": "DTOクラス名のPrefix・Suffix"
                                        },
                                        "ltrimTableName": {
                                            "type": "string",
                                            "default": "table_",
                                            "description": "テーブル名からマッチした先頭文字を取り外す"
                                        },
                                        "defaultValues": {
                                            "type": "object",
                                            "title": "デフォルト値一覧",
                                            "properties": {
                                                "int": {
                                                    "type": "string",
                                                    "default": "0",
                                                    "description": "int型のデフォルト値"
                                                },
                                                "float": {
                                                    "type": "string",
                                                    "default": "0.0",
                                                    "description": "float型のデフォルト値"
                                                },
                                                "string": {
                                                    "type": "string",
                                                    "default": "''",
                                                    "description": "string型のデフォルト値"
                                                },
                                                "datetime": {
                                                    "type": "string",
                                                    "default": "'0000-00-00 00:00:00'",
                                                    "description": "DateTime型のデフォルト値"
                                                },
                                                "date": {
                                                    "type": "string",
                                                    "default": "'0000-00-00'",
                                                    "description": "Date型のデフォルト値"
                                                },
                                                "time": {
                                                    "type": "string",
                                                    "default": "'00:00:00'",
                                                    "description": "Time型のデフォルト値"
                                                }
                                            }
                                        }
                                    }
                                },
                                "tableList": {
                                    "type": "array",
                                    "title": "テーブル一覧",
                                    "default": [],
                                    "items": {
                                        "type": "string",
                                        "default": "",
                                        "description": "テーブル名"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/mysql": "^2.15.5",
        "@types/node": "^10.14.4",
        "tslint": "^5.15.0",
        "typescript": "^3.4.2",
        "vscode": "^1.1.33"
    },
    "dependencies": {
        "mysql": "^2.16.0"
    }
}
